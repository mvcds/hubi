{
  "name": "hubi",
  "version": "4.9.1",
  "description": "Humanitarian ubiquitous language helper",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:mvcds/hubi.git"
  },
  "author": "Marcos Vin√≠cius C. da Silva <marvinc.silva@gmail.com>",
  "homepage": "https://mvcds.github.io/hubi",
  "license": "MIT",
  "private": false,
  "reveal": true,
  "scripts": {
    "test": "yarn test:unit && yarn test:integration",
    "test:integration": "cucumber-js \"src/Domain/UseCases/**/*.feature\"",
    "test:integration:watch": "npm-watch test:integration",
    "test:unit": "mocha \"src/**/*.test.js\" --colors --sort --bail --recursive",
    "test:unit:watch": "npm-watch test:unit",
    "test:watch": "npm-watch test",
    "coverage": "nyc scripts/coverage.sh",
    "coverage:watch": "npm-watch coverage",
    "standard": "standard --env mocha",
    "lint": "(yarn standard) | snazzy",
    "lint:fix": "(yarn standard --fix) | snazzy",
    "validate": "yarn lint:fix && yarn coverage",
    "document": "node src/CLI/hubi s -t site -o docs && mv docs/index.hubi.html docs/index.html",
    "document:watch": "npm-watch document",
    "coveralls": "npx nyc report --reporter=text-lcov | coveralls",
    "dogfood": "node src/CLI/hubi s -st joi",
    "dogfood:watch": "npm-watch dogfood",
    "build": "yarn dogfood & yarn document",
    "commit": "npx git-cz",
    "release": "npx semantic-release --debug --no-ci"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 83,
    "statements": 83,
    "functions": 75,
    "branches": 50,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.steps.js",
      "src/**/*.test.js",
      "src/**/*.joi.js",
      "src/CLI/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": true,
    "all": true
  },
  "watch": {
    "test": {
      "patterns": [
        "src"
      ],
      "extensions": "js,feature,fixture,pug",
      "quiet": true
    },
    "test:unit": {
      "patterns": [
        "src"
      ],
      "extensions": "js,feature,fixture,pug",
      "quiet": true
    },
    "test:integration": {
      "patterns": [
        "src"
      ],
      "extensions": "js,feature,fixture,pug",
      "quiet": true
    },
    "coverage": {
      "patterns": [
        "src"
      ],
      "extensions": "js,feature,fixture,pug",
      "quiet": true
    },
    "document": {
      "patterns": [
        "src",
        "docs"
      ],
      "extensions": "js,feature,fixture,pug,css,yml",
      "quiet": true
    },
    "dogfood": {
      "patterns": [
        "src"
      ],
      "extensions": "js,feature,fixture,pug,yml",
      "quiet": true
    }
  },
  "dependencies": {
    "commander": "^2.15.1",
    "glob": "^7.1.2",
    "glob-watcher": "^5.0.3",
    "htmltidy": "^0.0.6",
    "joi": "^13.2.0",
    "js-yaml": "^3.11.0",
    "pug": "^2.0.3",
    "write": "^1.0.3"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^7.5.0",
    "@semantic-release/git": "^7.0.6",
    "@semantic-release/npm": "^5.1.2",
    "commitizen": "^3.0.7",
    "commitlint": "^7.5.2",
    "coveralls": "^3.0.0",
    "cucumber": "^4.0.0",
    "cz-conventional-changelog": "2.1.0",
    "faker": "^4.1.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "mocha": "^5.0.5",
    "mocha-lcov-reporter": "^1.3.0",
    "npm-watch": "^0.3.0",
    "nyc": "^11.6.0",
    "semantic-release": "^17.2.3",
    "sinon": "^4.4.8",
    "snazzy": "^7.1.1",
    "standard": "^11.0.1"
  },
  "bin": {
    "hubi": "./src/CLI/hubi"
  },
  "engines": {
    "node": ">=13.1.0",
    "npm": ">=5.6.0",
    "yarn": ">=1.15.2"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "ubiquitous-language",
    "nodejs",
    "agnostic",
    "language-agnostic",
    "yml",
    "configurable",
    "cli",
    "developer-tools",
    "domain-driven-design",
    "command-line"
  ]
}
