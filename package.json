{
  "name": "hubi",
  "version": "0.0.7",
  "description": "Ubiquitous language helper",
  "main": "index.js",
  "repository": "git@github.com:mvcds/hubi.git",
  "author": "Marcos Vin√≠cius C. da Silva <marvinc.silva@gmail.com>",
  "license": "MIT",
  "private": false,
  "watch": {
    "test": {
      "patterns": [
        "src"
      ],
      "extensions": "js,feature,fixture",
      "quiet": true
    },
    "test:unit": {
      "patterns": [
        "src"
      ],
      "extensions": "js,feature,fixture",
      "quiet": true
    },
    "test:integration": {
      "patterns": [
        "src"
      ],
      "extensions": "js,feature,fixture",
      "quiet": true
    },
    "coverage": {
      "patterns": [
        "src"
      ],
      "extensions": "js,feature,fixture",
      "quiet": true
    }
  },
  "scripts": {
    "test": "yarn test:unit && yarn test:integration",
    "test:integration": "cucumber-js \"src/Domain/UseCases/**/*.feature\"",
    "test:integration:watch": "npm-watch test:integration",
    "test:unit": "mocha \"src/**/*.test.js\" --colors --sort --bail --recursive",
    "test:unit:watch": "npm-watch test:unit",
    "test:watch": "npm-watch test",
    "coverage": "nyc yarn test",
    "coverage:watch": "npm-watch coverage",
    "standard": "standard --env mocha",
    "lint": "(yarn standard) | snazzy",
    "lint:fix": "(yarn standard --fix) | snazzy",
    "validate": "yarn lint:fix && yarn coverage",
    "bump": "np"
  },
  "dependencies": {
    "colors": "^1.2.1",
    "commander": "^2.15.1",
    "glob": "^7.1.2",
    "js-yaml": "^3.11.0",
    "write": "^1.0.3"
  },
  "devDependencies": {
    "cucumber": "^4.0.0",
    "faker": "^4.1.0",
    "mocha": "^5.0.5",
    "np": "^2.20.1",
    "npm-watch": "^0.3.0",
    "nyc": "^11.6.0",
    "sinon": "^4.4.8",
    "snazzy": "^7.1.1",
    "standard": "^11.0.1"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.steps.js",
      "src/**/*.test.js",
      "src/CLI/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": true,
    "all": true
  },
  "bin": {
    "hubi": "./index.js"
  },
  "engines": {
    "node": ">=8.9.4",
    "npm": ">=5.6.0"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  }
}
