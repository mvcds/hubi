{
  "name": "hubi",
  "version": "3.5.0",
  "description": "Humanitarian ubiquitous language helper",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:mvcds/hubi.git"
  },
  "author": "Marcos Vin√≠cius C. da Silva <marvinc.silva@gmail.com>",
  "homepage": "https://mvcds.github.io/hubi",
  "license": "MIT",
  "private": false,
  "watch": {
    "test": {
      "patterns": [
        "src"
      ],
      "extensions": "js,feature,fixture,pug",
      "quiet": true
    },
    "test:unit": {
      "patterns": [
        "src"
      ],
      "extensions": "js,feature,fixture,pug",
      "quiet": true
    },
    "test:integration": {
      "patterns": [
        "src"
      ],
      "extensions": "js,feature,fixture,pug",
      "quiet": true
    },
    "coverage": {
      "patterns": [
        "src"
      ],
      "extensions": "js,feature,fixture,pug",
      "quiet": true
    },
    "document": {
      "patterns": [
        "src",
        "docs"
      ],
      "extensions": "js,feature,fixture,pug,css",
      "quiet": true
    }
  },
  "scripts": {
    "test": "yarn test:unit && yarn test:integration",
    "test:integration": "cucumber-js \"src/Domain/UseCases/**/*.feature\"",
    "test:integration:watch": "npm-watch test:integration",
    "test:unit": "mocha \"src/**/*.test.js\" --colors --sort --bail --recursive",
    "test:unit:watch": "npm-watch test:unit",
    "test:watch": "npm-watch test",
    "coverage": "nyc yarn test",
    "coverage:watch": "npm-watch coverage",
    "standard": "standard --env mocha",
    "lint": "(yarn standard) | snazzy",
    "lint:fix": "(yarn standard --fix) | snazzy",
    "validate": "yarn lint:fix && yarn coverage",
    "precommit": "yarn validate",
    "release": "yarn release:pre && release-it --non-interactive && yarn release:pos",
    "release:minor": "yarn release:pre && release-it minor --non-interactive && yarn release:pos",
    "release:major": "yarn release:pre && release-it major --non-interactive && yarn release:pos",
    "release:pre": "git checkout . && git clean -fd && yarn validate",
    "release:pos": "yarn document && git add . && git commit --no-verify -m \"fix version\" && git push",
    "document": "node index s -t site -o docs && mv docs/hubi.hubi.html docs/index.html",
    "document:watch": "npm-watch document",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "test:release": "find src -type f \\( -iname \\*.feature -o -iname \\*.test.js \\)"
  },
  "dependencies": {
    "colors": "^1.2.1",
    "commander": "^2.15.1",
    "glob": "^7.1.2",
    "htmltidy": "^0.0.6",
    "js-yaml": "^3.11.0",
    "pug": "^2.0.3",
    "write": "^1.0.3"
  },
  "devDependencies": {
    "coveralls": "^3.0.0",
    "cucumber": "^4.0.0",
    "faker": "^4.1.0",
    "husky": "^0.14.3",
    "mocha": "^5.0.5",
    "mocha-lcov-reporter": "^1.3.0",
    "npm-watch": "^0.3.0",
    "nyc": "^11.6.0",
    "release-it": "^7.3.0",
    "sinon": "^4.4.8",
    "snazzy": "^7.1.1",
    "standard": "^11.0.1"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.steps.js",
      "src/**/*.test.js",
      "src/CLI/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": true,
    "all": true
  },
  "bin": {
    "hubi": "./index.js"
  },
  "engines": {
    "node": ">=8.9.4",
    "npm": ">=5.6.0"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "ubiquitous-language",
    "nodejs",
    "agnostic",
    "language-agnostic",
    "yml",
    "configurable",
    "cli",
    "developer-tools",
    "domain-driven-design",
    "command-line"
  ]
}
