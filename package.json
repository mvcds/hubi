{
  "name": "ubi",
  "version": "0.0.0",
  "description": "Ubiquitous language helper",
  "main": "index.js",
  "repository": "git@github.com:mvcds/ubi.git",
  "author": "Marcos Vin√≠cius C. da Silva <marvinc.silva@gmail.com>",
  "license": "MIT",
  "private": false,
  "watch": {
    "test": {
      "patterns": [
        "src"
      ],
      "extensions": "js,feature",
      "quiet": true
    },
    "coverage": {
      "patterns": [
        "src"
      ],
      "extensions": "js,feature",
      "quiet": true
    }
  },
  "scripts": {
    "test": "cucumber-js src/Domain/UseCases/**/*.feature --require src/Domain/UseCases/**/*.steps.js",
    "test:watch": "npm-watch test",
    "coverage": "nyc yarn test",
    "coverage:watch": "npm-watch coverage",
    "precommit": "yarn coverage"
  },
  "dependencies": {
    "colors": "^1.2.1",
    "commander": "^2.15.1",
    "glob": "^7.1.2",
    "js-yaml": "^3.11.0",
    "write": "^1.0.3"
  },
  "devDependencies": {
    "cucumber": "^4.0.0",
    "husky": "^0.14.3",
    "npm-watch": "^0.3.0",
    "nyc": "^11.6.0",
    "sinon": "^4.4.8"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.steps.js",
      "src/CLI"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": true,
    "all": true
  },
  "bin": {
    "ubi": "./index.js"
  }
}
